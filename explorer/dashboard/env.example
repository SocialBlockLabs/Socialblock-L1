# SocialBlock Explorer Environment Configuration
# Copy this file to .env and configure according to your deployment

# Network Configuration
VITE_NETWORK=development
# Options: development, testnet, mainnet

# Node Endpoints (CometBFT + Cosmos SDK)
# Development (matches docker-compose.yaml from official repo)
VITE_RPC_HTTP=http://localhost:26657
VITE_RPC_WS=ws://localhost:26657/websocket
VITE_REST_API=http://localhost:1317
VITE_GRPC=http://localhost:9090

# Testnet Endpoints
# VITE_RPC_HTTP=https://rpc.testnet.socialblock.io
# VITE_RPC_WS=wss://rpc.testnet.socialblock.io/websocket
# VITE_REST_API=https://api.testnet.socialblock.io
# VITE_GRPC=https://grpc.testnet.socialblock.io

# Mainnet Endpoints
# VITE_RPC_HTTP=https://rpc.socialblock.io
# VITE_RPC_WS=wss://rpc.socialblock.io/websocket
# VITE_REST_API=https://api.socialblock.io
# VITE_GRPC=https://grpc.socialblock.io

# ARP Agent (AI Reputation Proof) Service
VITE_ARP_AGENT=http://localhost:8080
VITE_ARP_AGENT_API_KEY=your-arp-agent-api-key-here

# Event Indexer Service
VITE_INDEXER_API=http://localhost:3001

# Explorer API (if using separate explorer backend)
VITE_EXPLORER_API=http://localhost:8088

# Optional: Additional Configuration
# VITE_ENABLE_DEBUG=true
# VITE_ENABLE_ANALYTICS=false
# VITE_DEFAULT_GAS_PRICE=0.025
